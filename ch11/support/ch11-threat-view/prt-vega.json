{
  "name": "force",
  "viewport": [ 500, 500 ], 
  "width": 500,
  "height": 500,  
  "padding": { "top":0, "bottom":0, "left":0, "right":0},
  "data": [
    {
      "name": "edges",
      "url": "prt-data.json",
      "format": {"type": "json", "property": "links"},
      "transform": [
        {"type": "copy", "from": "data", "fields": ["source", "target" ]}
      ]
    },
    {
      "name": "nodes",
      "url": "prt-data.json",
      "format": {"type": "json", "property": "nodes"},
      "transform": [
        {
          "type": "force",
          "links": "edges",
          "linkDistance": 30,
          "charge": -100,
          "iterations": 5000
        },
        {
          "type": "copy", "from":"data","fields":["name", "group", "color", "type", "info", "cc", "dns"]
        }
      ]
    }
  ],
  "marks": [
    {
      "type": "path",
      "from": {
        "data": "edges",
        "transform": [
          {"type": "link", "shape": "line"}
        ]
      },
      "properties": {
        "update": {
          "path": {"field": "path"},
          "stroke": {"value": "#ccc"},
          "strokeWidth": {"value": 0.5}
        }
      }
    },
    {
      "type":  "symbol" ,
      "from": {"data": "nodes"},
      "properties": {
        "enter": {
          "shape" : { "field" : "data.type" },
          "fillOpacity": {"value": 0.3},
          "stroke": {"field":"data.color"}
        },
        "update": {
          "x": {"field": "x"},
          "y": {"field": "y"},
          "fill": {"field":"data.color"}
        },
        "hover": {
          "fill": {"value": "#f00"}
        }
      }
    }
  ]
}

